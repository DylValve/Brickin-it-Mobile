<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LegoMobile.Sets.LookUpSet">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Grid
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"
                BackgroundColor="#0796f1"
                >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Text="←"
                                Grid.Column="0"
                                Grid.ColumnSpan="1"
                                Grid.Row="0"
                                TextColor="White"
                                FontSize="20"
                                FontAttributes="Bold"
                                HorizontalOptions="StartAndExpand"
                                VerticalOptions="StartAndExpand"
                                Padding="10"
                                BackgroundColor="#f2b705"
                                CornerRadius="25"
                                MinimumWidthRequest="1"
                                Margin="10"
                                x:Name="backArrow"
                                Clicked="backArrow_Clicked"
                            />
                    <Label Text="Brickin'It"
                               Grid.Column="1"
                               Grid.ColumnSpan="1"
                               Grid.Row="0"
                               FontSize="Medium"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalTextAlignment="Center"
                               TextColor="White"
                               Margin="10"
                           />
                    <Label Text=""
                           Grid.Column="2"
                           Grid.ColumnSpan="1"
                           Grid.Row="0"
                    />
                </Grid>
            </StackLayout>
            <StackLayout
                VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    WidthRequest="300">
                <Label Text="Look Up Set"
                   FontAttributes="Bold"
                   FontSize="40"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                   Margin="0,0,0,100">
                </Label>
                <Entry
                Placeholder="Enter Set Number  " HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                TextColor="Black"
                FontSize="26"
                Margin="0,0,0,0"
                    x:Name="setEntryName">
                </Entry>
                <Button
                CornerRadius="25"
                Text="Fetch "
                BackgroundColor="#E3000B"
                TextColor="White"
                Margin="0,75,0,25"
                x:Name="FetchAPIButton"
                Clicked="FetchAPIButton_Clicked">
                </Button>
                <Button
                CornerRadius="25"
                Text="Add Manually"
                BackgroundColor="#E3000B"
                TextColor="White"
                Margin="0,0,0,25"
                    x:Name="AddManuallyButton"
                    Clicked="AddManuallyButton_Clicked">
                </Button>
                <Button
                CornerRadius="25"
                Text="Scan Barcode"
                BackgroundColor="#E3000B"
                TextColor="White"
                Margin="0,0,0,0"
                x:Name="ScanBarcodeButton"
                Clicked="ScanBarcodeButton_Clicked"
                    IsVisible="false">
                </Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
