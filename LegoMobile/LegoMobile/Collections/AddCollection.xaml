<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LegoMobile.Collections.AddCollection">
    <ContentPage.Content>
        <StackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        WidthRequest="300">
            <Label Text="Add Collection"
                   FontAttributes="Bold"
                   FontSize="40"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                    Margin="0,0,0,100">
            </Label>
            <!-- Place new controls here -->
            <StackLayout>
                <Entry
                    Placeholder="Name of Collection"
                    FontSize="22"
                    HorizontalTextAlignment="Center"
                    x:Name="CollectionName"
                    >
                </Entry>
                <Button    
                    CornerRadius="25"
                    Text="Add Collection"
                    FontSize="Body"
                    BackgroundColor="#55a349" 
                    TextColor="Black"
                    Margin="0,75,0,0"
                    x:Name="CollectionAddButton"
                    Clicked="CollectionAddButton_Clicked"
                    >
                </Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>